{
  "name": "Impulse Blocker",
  "version": "1.2.0",
  "manifest_version": 2,
  "description": "Block distracting websites when you are browsing the web.",
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs"
  ],
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": ["redirect.html"],
  "background": {
    "scripts": ["dist/background.bundle.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon96.png",
    "default_title": "Impulse Blocker",
    "default_popup": "popup.html"
  },
  "incognito": "spanning"
}
