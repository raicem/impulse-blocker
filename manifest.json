{

  "name": "Impulse Blocker",
  "version": "0.1.3",
  "manifest_version": 2,
  "description": "Block distracting websites when you are browsing the web.",

  "permissions": [
    "webRequest", "webRequestBlocking", "storage", "tabs"
  ],

  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },

  "options_ui": {
      "page": "options/options.html"
    },

  "web_accessible_resources": [
      "redirect.html"
    ],
 
  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/icon96.png",
    "default_title": "Impulse Blocker",
    "default_popup": "popup/menubar.html"
  }
}